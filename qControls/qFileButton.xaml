<UserControl x:Class="qControls.qFileButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:qControls"
             mc:Ignorable="d" Height="200" Width="164">
    <Grid MouseUp="imgSource_MouseUp">
        <Image Name="imgSource" Source="Game Icon.png" Margin="0,0,0,80" VerticalAlignment="Top"/>
        <Label Name="lblText" Content="File Name Goes Here....." Margin="0,140,0,0" Background="{x:Null}" FontSize="18" HorizontalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Center" TextOptions.TextFormattingMode="Display" MouseUp="imgSource_MouseUp"/>

    </Grid>
</UserControl>
